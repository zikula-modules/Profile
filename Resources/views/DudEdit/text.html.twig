<div class="{{ class|e('html_attr')|default('form-group') }}">
    <label for="prop_{{ attributeName|e('html_attr') }}" class="col-sm-3 control-label{% if required %} required{% endif %}">{{ propLabelText }}</label>
    <div class="col-sm-9">
        <input id="prop_{{ attributeName|e('html_attr') }}" class="form-control" name="{{ fieldName|e('html_attr') }}" type="text" value="{{ value|e('html_attr') }}"{% if item.prop_pattern|default %} pattern="{{ item.prop_pattern|e('html_attr') }}"{% endif %}{% if required %} required="required"{% endif %} />
        {% if note != '' %}
            <p class="help-block">{{ note }}</p>
        {% endif %}
    </div>
</div>
